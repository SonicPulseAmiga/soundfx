; Icon ------------------------------------------------------------------------------------------------------

(COMPLETE 68)
(IF (= #iconset 0)
	(SET #icon-dest "sfx-data/icons_std")
)
(IF (= #iconset 1)
	(SET #icon-dest "sfx-data/icons_mwb")
)
